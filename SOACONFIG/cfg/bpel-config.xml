<?xml version='1.0' encoding='UTF-8'?>
<bpel-config xmlns="http://xmlns.oracle.com/soa/config/bpel" version="11.1.0">
<dspSystemThreads>2</dspSystemThreads>
<dspInvokeThreads>20</dspInvokeThreads>
<dspNonBlockInvokeThreads>2</dspNonBlockInvokeThreads>
<dspEngineThreads>30</dspEngineThreads>
<dspMaxRequestDepth>600</dspMaxRequestDepth>
<auditLevel>inherit</auditLevel>
<oneWayDeliveryPolicy>async.persist</oneWayDeliveryPolicy>
<statsLastN>-1</statsLastN>
<auditDetailThreshold>50000</auditDetailThreshold>
<largeDocumentThreshold>100000</largeDocumentThreshold>
<validateXML>false</validateXML>
<expirationMaxRetry>5</expirationMaxRetry>
<expirationRetryDelay>120</expirationRetryDelay>
<qualityOfService>DirectWrite</qualityOfService>
<qualityOfService.oneWayDeliveryPolicy.useDistributedCache>false</qualityOfService.oneWayDeliveryPolicy.useDistributedCache>
<qualityOfService.auditStorePolicy.useDistributedCache>false</qualityOfService.auditStorePolicy.useDistributedCache>
<syncMaxWaitTime>45</syncMaxWaitTime>
<instanceKeyBlockSize>10000</instanceKeyBlockSize>
<maximumNumberOfInvokeMessagesInCache>100000</maximumNumberOfInvokeMessagesInCache>
<disableSensors>false</disableSensors>
<disableAsserts>false</disableAsserts>
<auditStorePolicy>syncSingleWrite</auditStorePolicy>
<asyncAuditQueueSize>10000</asyncAuditQueueSize>
<asyncAuditPersisterThreads>5</asyncAuditPersisterThreads>
<auditFlushEventThreshold>300</auditFlushEventThreshold>
<auditFlushByteThreshold>2048000</auditFlushByteThreshold>
<asyncAuditBatchSize>-1</asyncAuditBatchSize>
<maxRecoverAttempt>2</maxRecoverAttempt>
<recovery-config>
<startup-schedule>
<startupRecoveryDuration>600</startupRecoveryDuration>
<subsequentTriggerDelay>300</subsequentTriggerDelay>
<maxMessageRaiseSize>50</maxMessageRaiseSize>
</startup-schedule>
<recurring-schedule>
<startWindowTime>00:00</startWindowTime>
<stopWindowTime>04:00</stopWindowTime>
<subsequentTriggerDelay>300</subsequentTriggerDelay>
<maxMessageRaiseSize>50</maxMessageRaiseSize>
<threshHoldTimeInMinutes>10</threshHoldTimeInMinutes>
</recurring-schedule>
</recovery-config>
<specCompliance>suggest</specCompliance>
</bpel-config>
